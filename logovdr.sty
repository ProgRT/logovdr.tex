				vdrplot/.style={
					xshift=-7.5mm,
					yshift=-3mm,
					xscale=0.05,
					yscale=.15,
					},
				hexagon/.style={
					draw,
					regular polygon,
					regular polygon sides=6,
					minimum size=2.4cm,
					rotate=30
					},
				every node/.style={
					font=\fontfamily{\sfdefault}\fontsize{9}{10}\selectfont
					}
						]

						%\draw [black!20] (-1,-1) grid [step=0.5](1,1);

						\node [hexagon] {};
